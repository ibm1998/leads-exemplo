{
  "name": "agentic-lead-management-api",
  "type": "module",
  "version": "1.0.0",
  "description": "API for Agentic Lead Management System",
  "main": "dist/index.js",
  "scripts": {
    "build": "node --max-old-space-size=4096 ./node_modules/.bin/tsc",
    "dev:api": "tsx watch src/index.ts",
    "dev:n8n": "n8n start",
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:n8n\"",
    "start": "node dist/index.js",
    "test": "vitest --run",
    "test:watch": "vitest",
    "db:migrate": "tsx src/database/migrate.ts",
    "db:seed": "tsx src/database/seed.ts",
    "type-check": "tsc --noEmit",
    "lint": "eslint . --ext .ts,.tsx",
    "deploy": "npx firebase deploy --only hosting"
  },
  "dependencies": {
    "axios": "^1.11.0",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^5.1.0",
    "firebase": "^11.10.0",
    "googleapis": "^155.0.0",
    "next-firebase-auth": "^1.4.0",
    "node.js": "^0.0.1-security",
    "pg": "^8.11.3",
    "rate-limiter-flexible": "^7.2.0",
    "redis": "^5.8.0",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/node": "^20.19.11",
    "@types/pg": "^8.10.7",
    "@types/redis": "^4.0.10",
    "@typescript-eslint/eslint-plugin": "^8.39.1",
    "@typescript-eslint/parser": "^8.39.1",
    "concurrently": "^8.0.0",
    "eslint": "^9.33.0",
    "eslint-plugin-react": "^7.37.5",
    "firebase-tools": "^14.12.1",
    "jest": "^30.0.5",
    "n8n": "^1.17.0",
    "supertest": "^7.1.4",
    "tsx": "^4.20.3",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
}
